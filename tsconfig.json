{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "es2015",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "components/*" : ["./src/components/*"],
      "state/*" : ["./src/state/*"],
      "core/*" : ["./src/core/*"],
      "blocks/*" : ["./src/blocks/*"],
      "scenes/*" : ["./src/scenes/*"],
      "boot/*" : ["./src/boot/*"] 
  }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests"
  ]
}
